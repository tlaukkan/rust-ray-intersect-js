{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "types": [
      "node",
      "mocha",
      "chai"
    ],
    "typeRoots": [
      "src/typings",
      "node_modules/@types"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
